<link rel="stylesheet" href="/admin/template/vendor/summernote/summernote.css">
<div class="page-content">
    <div class="panel panel-boxed">
        <div class="panel-body">
            <form method="post" action="/admin/faq/save">
                <div class="form-group">
                    <label>Question (required *)</label>
                    <input type="text" class="form-control" id="section-name" required name="question" value="<%= section ==null ? "" : section.title %>">
                </div>
                <input hidden name="id" value="<%= id %>">
                <div class="form-group">
                    <label>Answer (required *)</label>
                    <textarea id="section-content" class="form-control" required name="answer"><%= section ==null ? "" : section.content %></textarea>
                </div>
<!--                <div class="form-group">-->
<!--                    <select class="form-control" name="section_status" value="<%= section == null ? 'draft' : section.status  %>">-->
<!--                    <option value="draft" <%= section!=null && section.status==="draft" ? "selected" : ""%> >Draft</option>-->
<!--                    <option value="publish" <%= section!=null && section.status==="publish" ? "selected" : ""%>>Publish</option>-->
<!--                    </select>-->
<!--                </div>-->
                <div class="form-group">
                    <button class="btn btn-primary"><%= id==null ? "Submit" : "Update"%></button>
                </div>
            </form>
        </div>
    </div>
</div>

<div>
    <script src="/public/admin/template/vendor/summernote/summernote.min.js')}}"></script>
    <script>
        $(document).ready(function () {
            $('#section-content').summernote({
                height:400,
                toolbar: [
                    ['style', ['bold', 'italic', 'underline', 'clear']],
                    ['font', ['strikethrough', 'superscript', 'subscript']],
                    ['fontsize', ['fontsize']],
                    ['color', ['color']],
                    ['para', ['ul', 'ol', 'paragraph']],
                    ['height', ['height']],
                    ['insert', ['link', 'picture', 'video','table']],
                    ['view', ['fullscreen', 'codeview', 'help']],
                ]
            });
        })
    </script>
</div>